<h2>
  <% band_name = @album.band.name %>
  Album:
  <%= @album.album_name %>
  <br>
  By:
  <%= band_name %>
</h2>

<ul>
  <li><%= button_to 'Destroy This album', album_url(@album), method: :delete %></li>
  <li><%= link_to 'Edit This album', edit_album_url(@album) %></li>
  <li><%= link_to "Return to #{band_name}", band_url(@album.band) %></li>
  <li><%= link_to 'Return to All albums', albums_url %></li>
  <li><%= link_to "All Albums for #{@album.album_name}", albums_url %></li>
</ul>
